---
import { siteConfig } from "../config";

const certifications = siteConfig.certifications || [];
---

{certifications.length > 0 && (
  <section id="certifications" class="p-8 sm:p-12 md:p-16 lg:p-24">
    <div>
      <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
        <div class="lg:col-span-4">
          <h2 class="text-3xl sm:text-4xl md:text-5xl xl:text-6xl font-bold text-gray-900">
             Certificate
          </h2>
          <div
            class="w-[75px] h-[5px] mt-2 rounded-full"
            style={`background-color: ${siteConfig.accentColor}`}
          >
          </div>
        </div>

        <div class="lg:col-span-8">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            {certifications.map((cert) => (
              <div class="bg-gray-50 p-6 rounded-lg shadow-sm hover:shadow-md transition-shadow duration-200">
                <h3 class="text-xl font-bold text-gray-900 mb-2">
                  {cert.name}
                </h3>
                <p class="text-gray-600">
                  Period {cert.date}
                </p>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>
)}