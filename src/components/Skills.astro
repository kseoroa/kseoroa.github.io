---
import { siteConfig } from '../config.ts';

const { skills } = siteConfig;
---

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-8">기술 스택</h2>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    <!-- Languages -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
      <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">언어</h3>
      <div class="flex flex-wrap gap-2">
        {skills.languages.split(', ').map(lang => (
          <span class="px-3 py-1 bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200 text-sm rounded-full">
            {lang}
          </span>
        ))}
      </div>
    </div>

    <!-- Frameworks -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
      <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">프레임워크</h3>
      <div class="flex flex-wrap gap-2">
        {skills.frameworks.split(', ').map(framework => (
          <span class="px-3 py-1 bg-purple-100 dark:bg-purple-900 text-purple-800 dark:text-purple-200 text-sm rounded-full">
            {framework}
          </span>
        ))}
      </div>
    </div>

    <!-- Testing -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
      <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">테스트</h3>
      <div class="flex flex-wrap gap-2">
        {skills.testing.split(', ').map(test => (
          <span class="px-3 py-1 bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-200 text-sm rounded-full">
            {test}
          </span>
        ))}
      </div>
    </div>

    <!-- Tools -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
      <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">개발 도구</h3>
      <div class="flex flex-wrap gap-2">
        {skills.tools.split(', ').map(tool => (
          <span class="px-3 py-1 bg-indigo-100 dark:bg-indigo-900 text-indigo-800 dark:text-indigo-200 text-sm rounded-full">
            {tool}
          </span>
        ))}
      </div>
    </div>

    <!-- Infrastructure -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
      <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">인프라</h3>
      <div class="flex flex-wrap gap-2">
        {skills.infrastructure.split(', ').map(inf => (
          <span class="px-3 py-1 bg-yellow-100 dark:bg-yellow-900 text-yellow-800 dark:text-yellow-200 text-sm rounded-full">
            {inf}
          </span>
        ))}
      </div>
    </div>

    <!-- Communication -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
      <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">통신</h3>
      <div class="flex flex-wrap gap-2">
        {skills.communication.split(', ').map(comm => (
          <span class="px-3 py-1 bg-red-100 dark:bg-red-900 text-red-800 dark:text-red-200 text-sm rounded-full">
            {comm}
          </span>
        ))}
      </div>
    </div>
  </div>
</div>
