---
import { siteConfig } from '../config.ts';

const { skills } = siteConfig;
---

<section id="skills" class="p-8 sm:p-12 md:p-16 lg:p-24">
  <div>
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
      <div class="lg:col-span-4">
        <h2 class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold text-gray-900">
          Skills
        </h2>
        <div
          class="w-[75px] h-[5px] mt-2 rounded-full"
          style={`background-color: ${siteConfig.accentColor}`}
        />
      </div>

      <div class="lg:col-span-8">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          <!-- Languages -->
          <div class="bg-gray-50 rounded-lg shadow-sm border border-gray-100 p-6 hover:shadow-md transition-shadow duration-300">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">언어</h3>
            <div class="flex flex-wrap gap-2">
              {skills.languages.split(', ').map(lang => (
                <span class="px-3 py-1 bg-blue-100 text-blue-800 text-sm rounded-full">
                  {lang}
                </span>
              ))}
            </div>
          </div>

          <!-- Frameworks -->
          <div class="bg-gray-50 rounded-lg shadow-sm border border-gray-100 p-6 hover:shadow-md transition-shadow duration-300">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">프레임워크</h3>
            <div class="flex flex-wrap gap-2">
              {skills.frameworks.split(', ').map(framework => (
                <span class="px-3 py-1 bg-purple-100 text-purple-800 text-sm rounded-full">
                  {framework}
                </span>
              ))}
            </div>
          </div>

          <!-- Testing -->
          <div class="bg-gray-50 rounded-lg shadow-sm border border-gray-100 p-6 hover:shadow-md transition-shadow duration-300">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">테스트</h3>
            <div class="flex flex-wrap gap-2">
              {skills.testing.split(', ').map(test => (
                <span class="px-3 py-1 bg-green-100 text-green-800 text-sm rounded-full">
                  {test}
                </span>
              ))}
            </div>
          </div>

          <!-- Tools -->
          <div class="bg-gray-50 rounded-lg shadow-sm border border-gray-100 p-6 hover:shadow-md transition-shadow duration-300">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">개발 도구</h3>
            <div class="flex flex-wrap gap-2">
              {skills.tools.split(', ').map(tool => (
                <span class="px-3 py-1 bg-indigo-100 text-indigo-800 text-sm rounded-full">
                  {tool}
                </span>
              ))}
            </div>
          </div>

          <!-- Infrastructure -->
          <div class="bg-gray-50 rounded-lg shadow-sm border border-gray-100 p-6 hover:shadow-md transition-shadow duration-300">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">인프라</h3>
            <div class="flex flex-wrap gap-2">
              {skills.infrastructure.split(', ').map(inf => (
                <span class="px-3 py-1 bg-yellow-100 text-yellow-800 text-sm rounded-full">
                  {inf}
                </span>
              ))}
            </div>
          </div>

          <!-- Communication -->
          <div class="bg-gray-50 rounded-lg shadow-sm border border-gray-100 p-6 hover:shadow-md transition-shadow duration-300">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">통신</h3>
            <div class="flex flex-wrap gap-2">
              {skills.communication.split(', ').map(comm => (
                <span class="px-3 py-1 bg-red-100 text-red-800 text-sm rounded-full">
                  {comm}
                </span>
              ))}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
